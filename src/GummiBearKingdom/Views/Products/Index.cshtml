@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<GummiBearKingdom.Models.Product>


<h2>@Html.DisplayNameFor(model => model.Name) Detail List</h2>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OriginCountry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Section.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var listProject in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => listProject.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => listProject.OriginCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => listProject.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => listProject.Section.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = listProject.ProductId })
            </td>
        </tr>
    }
</table>

<p>@Html.ActionLink("Add new product", "Create")</p>


